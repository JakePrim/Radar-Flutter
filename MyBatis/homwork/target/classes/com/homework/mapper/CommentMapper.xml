<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.homework.mapper.CommentMapper">
    <select id="findByAid" resultType="comment" parameterType="int">
        select *
        from t_comment
        where a_id = #{a_id}
    </select>
</mapper>