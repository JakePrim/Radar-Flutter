<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.prim.mapper.ProductMapper">
    <update id="reduceStock" parameterType="int">
        update product
        set stock = stock - 1
        where id = #{id}
    </update>


    <select id="getProductById" resultType="com.prim.model.Product" parameterType="int">
        select *
        from product
        where id = #{id}
    </select>
</mapper>